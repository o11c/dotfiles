[user]
	name = Ben Longbons
	email = b.r.longbons@gmail.com
[color]
	branch = auto
	diff = auto
	grep = auto
	whitespace = auto
	interactive = auto
	showbranch = auto
	status = auto
[core]
	excludesfile = ~/conf/gitexcludes
	autocrlf = input
	whitespace = blank-at-eol,space-before-tab,tab-in-indent,blank-at-eof
	attributesfile = /home/ben/conf/gitattributes
[url "git@gitorious.org:"]
	pushInsteadOf = git://gitorious.org
[url "git@github.com:"]
	pushInsteadOf = git://github.com
[diff]
	mnemonicprefix = true
	renames = copy
[log]
	date = iso
[alias]
	wdiff = diff --color-words=[A-Za-z_][A-Za-z_0-9]+|[0-9.]+|[<=>]+|[^[:space:]]
	wshow = show --color-words=[A-Za-z_][A-Za-z_0-9]+|[0-9.]+|[<=>]+|[^[:space:]]
	upstream = rev-parse --symbolic-full-name @{u}
[push]
	default = upstream
